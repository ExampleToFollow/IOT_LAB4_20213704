<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppActivity">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmento_total"
            android:layout_width="match_parent"
            android:layout_height="670sp"
            />
        <LinearLayout
            android:layout_marginTop="100sp"
            android:background="#4C70CC"
            android:orientation="horizontal"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligas"
                android:textColor="#17518A"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="50dp"
                android:layout_marginEnd="10dp"
                android:onClick="ligas"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posiciones"
                android:textColor="#17518A"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="50dp"
                android:onClick="posiciones"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultados"
                android:onClick="resultados"
                android:textColor="#17518A"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="50dp"
                android:layout_marginEnd="10dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>