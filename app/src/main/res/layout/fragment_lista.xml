<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaFragment">
   <LinearLayout
       android:background="#6F97DB"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:text="Ligas europeas"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="40sp"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80sp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250sp"
                android:layout_height="70sp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxStrokeWidth="2dp"
                android:background="@drawable/ola"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_gravity="center_vertical"
                    android:id="@+id/pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar por PaÃ­s"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="10sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="#DBDEE2"
                app:backgroundTint="#142D7C"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="50dp"
                android:id="@+id/boton_buscar_ligas"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/recyclerLista"
            android:layout_width="match_parent"
            android:layout_height="600sp"/>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>